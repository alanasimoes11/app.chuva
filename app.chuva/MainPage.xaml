       Grid.Row="2"
       Grid.Column="0"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label x:Name="Labelwind_direction"
       Grid.Row="2"
       Grid.Column="1"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/> 

</Grid>
</Frame>

<Frame x:Name="Lua"
       CornerRadius="20"
       Padding="0"
       Margin="5, 50, 5, 5"
       BorderColor="Black"
       BackgroundColor="#55ffffff"
       Grid.Row="1"
       Grid.Column="2">
<Grid>
<Grid.RowDefinitions>
    <RowDefinition Height ="*"/>
    <RowDefinition Height ="*"/>
</Grid.RowDefinitions>
<Grid.ColumnDefinitions>
    <ColumnDefinition Width ="*"/>
