       Grid.Row="0"
       Grid.ColumnSpan="2"
       FontSize="18"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label Text="Fase da Lua:"
       Grid.Row="1"
       Grid.Column="0"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label x:Name="Labelmoon_phase"
       Grid.Row="1"
       Grid.Column="1"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/> 

</Grid>
</Frame>

<Frame x:Name="segundaparte"
       CornerRadius="20"
       Padding="10"
       Margin="10, 50, 10, 5"
       BorderColor="Black"
