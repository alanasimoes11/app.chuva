       Grid.Row="2"
       Grid.Column="0"
       FontSize="15"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

</Grid>
</Frame>

<Frame x:Name="segundaparte"
       CornerRadius="20"
       Padding="10"
       Margin="5, 50, 5, 5"
       BorderColor="Black"
