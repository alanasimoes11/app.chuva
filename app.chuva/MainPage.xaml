</Grid.ColunmDefinitions>

<Image Source="dnublado.jpg"
       Grid.RowSpan="20"
       Grid.ColunmSpan="3"
       Aspect="AspectFill"/>
       
<Frame x:Name="Clima"
       CornerRadius="20"
       Padding="0"
       Margin="5, 50, 5, 30"
       BackgroundColor="#55ffffff"
       GridRow="0"
       Grid.RowSpan="3"
       Grid.Colunm="0">

<Grid>
<Grid.RowDefinitions>
    <RowDefinition Height ="*"/>
    <RowDefinition Height ="*"/>
    <RowDefinition Height ="*"/>
</Grid.RowDefinitions>
<Grid.ColunmDefinitions>
    <GridColunmDefinition Width ="100"/>
</Grid.ColunmDefinitions>

<Label Text="23"
       Grid.Row="0"
       Grid.Column="0"
       FontSize="60"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>
       
<Label Text="Dnublado"
       Grid.Row="1"
       Grid.Column="0"
       FontSize="15"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label Text="Apucarana-PR"
