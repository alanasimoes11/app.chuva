       Grid.Row="1"
       Grid.Column="0"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label x:Name="Labelwind_speedy"
       Grid.Row="1"
       Grid.Column="1"
       FontSize="12"
       TextColor="Black"
       HorizontalTextAlignment="Center"/> 

