</Grid.RowDefinitions>
<Grid.ColunmDefinitions>
    <GridColunmDefinition Width ="100"/>
</Grid.ColunmDefinitions>

<Label Text="Nuvem"
       Grid.Row="0"
       Grid.ColumnSpan="2"
       FontSize="18"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>
       
<Label Text="Chuva"
       Grid.Row="1"
       Grid.Column="0"
       FontSize="15"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

<Label Text="Umidade"
       Grid.Row="2"
       Grid.Column="0"
       FontSize="15"
       TextColor="Black"
       HorizontalTextAlignment="Center"/>

</Grid>
</Frame>

<Frame x:Name="Sol"
       CornerRadius="20"
       Padding="0"
       Margin="5, 50, 5, 5"
       BorderColor="Black"
       BackgroundColor="#55ffffff"
       Grid.Row="0"
       Grid.Column="1">

<Grid>
<Grid.RowDefinitions>
    <RowDefinition Height ="*"/>
    <RowDefinition Height ="*"/>
    <RowDefinition Height ="*"/>
</Grid.RowDefinitions>
<Grid.ColunmDefinitions>
    <GridColunmDefinition Width ="100"/>
